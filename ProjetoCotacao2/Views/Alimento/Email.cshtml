@model ProjetoCotacao2.Models.UsuarioCliente
@{
    ViewBag.Title = "Email";
    
}


<h2 class="headertekst">Envio de Cotação via E-mail</h2>


@Html.AntiForgeryToken()


@using (Html.BeginForm("Email", "Alimento", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{



    <fieldset>
        <div id="Id" class="form-group">
            @Html.LabelFor(model => model.Email_Cliente, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Email_Cliente,
                 new
                 {
                     @class = "form-control",
                     @placeholder = "Digite o email do Destinátario."
                 })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-primary" type="submit"
                       value="Enviar" formaction="EnviarEmail"
                       formmethod="post" />
            </div>
        </div>
    </fieldset>


}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
