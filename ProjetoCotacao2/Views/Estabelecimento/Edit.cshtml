@using ProjetoCotacao2.Models;
@model Estabelecimento

@using (Html.BeginForm("Edit", "Estabelecimento", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(model => model.idEstabelecimento)
    <fieldset>
        <legend>Alterar Alimento</legend>
        <div id="Id" class="form-group">
            @Html.Label("Id", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.idEstabelecimento, new { @class = "form-control", @placeholder = "Digite o nome do Estabelecimento", @readonly = "" })
            </div>
        </div>
        <div id="Nome" class="form-group">
            @Html.Label("Nome", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.nome, new { @class = "form-control", @placeholder = "Digite o nome do Estabelecimento" })
            </div>
        </div>

        <div id="telefone" class="form-group">
            @Html.Label("telefone", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.telefone, new { @class = "form-control", @placeholder = "Digite o telefone do Estabelecimento" })
            </div>
        </div>

        <div id="cidade" class="form-group">
            @Html.Label("cidade", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.cidade, new { @class = "form-control", @placeholder = "Digite a cidade do Estabelecimento" })
            </div>
        </div>

        <div id="endereco" class="form-group">
            @Html.Label("endereco", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.endereco, new { @class = "form-control", @placeholder = "Digite o endereco do Estabelecimento" })
            </div>
        </div>

        <div id="cnpj" class="form-group">
            @Html.Label("cnpj", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.cnpj, new { @class = "form-control", @placeholder = "Digite o cnpj do Estabelecimento" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-primary" type="submit"
                       value="Salvar" />
            </div>
        </div>
    </fieldset>
}