@model IEnumerable<ProjetoCotacao2.Models.Categoria>


@{
    ViewBag.Title = "Categoria";
}

<h2 class="text-center">Lista de Categorias</h2>

<p>
  <span class=""> @Html.ActionLink("Cadastrar nova categoria", "Create", new { area = "" }, new { @class = "btn btn-primary btn-lg" }) </span>
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
           Funções
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.idCategoria }, new { @class = "btn btn-light" }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.idCategoria }, new { @class = "btn btn-light" }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.idCategoria }, new { @class = "btn btn-light" })
            </td>
        </tr>
    }

</table>
