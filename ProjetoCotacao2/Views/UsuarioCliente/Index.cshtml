@using ProjetoCotacao2.Models
@model UsuarioCliente


@{
    ViewBag.Title = "Index";
    List<Estabelecimento> estabelecimento = ViewBag.Estabelecimentos;

}


<div class="row">
    <div class="col-md-4 mt-2">
        <div style="border: 1px solid black;background-color: #e9ecef;" class="mb-2">
            <div class="text-center">
                <span class="mt-2"><b>Informações usuario logado: </b></span>
                <div class="">
                    <b>Nome Usuario: </b>@Html.DisplayFor(model => model.Nome_Cliente)
                </div>
                <div class="profile-usertitle-job">
                    <b>Email: </b>@Html.DisplayFor(model => model.Email_Cliente)
                </div>
                <div class="profile-usertitle-job">
                    <b>Telefone: </b>@Html.DisplayFor(model => model.Telefone_Cliente)
                </div>
                <div class="profile-usertitle-email">
                    <b>Cpf: </b>@Html.DisplayFor(model => model.CPF_Cliente)
                </div>
                <div class="profile-usertitle-email">
                    <b>Sobrenome: </b>@Html.DisplayFor(model => model.Sobrenome)
                </div>
                <div class="mt-2 mb-2">

                    @Html.ActionLink("Alterar", "Edit", "", new { @class = "btn btn-danger" })

                </div>
            </div>
        </div>

        <div style="border: 1px solid black;background-color: #e9ecef;" class="">
            <div class="text-center">
                <span class="mt-2"><b>Lista Estabelecimentos : @Html.DisplayFor(model => model.Nome_Cliente) </b></span>
            </div>

            @foreach (Estabelecimento estabelecimentos in estabelecimento)
            {
                <div class="text-center">
                    <div class="">
                        <b>Nome Estabelecimento: </b>@Html.DisplayFor(modelItem => estabelecimentos.nome)
                    </div>
                    <div class="">
                        <b>Cidade Estabelecimento: </b>@Html.DisplayFor(modelItem => estabelecimentos.cidade)
                    </div>
                </div>
            }
        </div>

    </div>


    <div class="col-md-8">
        <div class="mt-2 jumbotron">
            <h1 class="display-4">Seja Bem Vindo, @Model.Nome_Cliente!</h1>
            <p class="lead">Este é o Sistema BETA de Cotações</p>
            <hr class="my-4">
            <p>Clique no botão abaixo para Iniciar uma Cotação!</p>
            @Html.ActionLink("Iniciar", "BuscaNome", "Alimento", new { area = "" }, new { @class = "btn btn-primary btn-lg" })


        </div>

    </div>
</div>

